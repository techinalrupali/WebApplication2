@{
}
<h3>SignUp Page</h3>
<div class="container">
    @{ Html.BeginForm();}
    <div class="row">
        <div class="col-lg-3">
            @Html.Label("Enter User Name")
        </div>
        <div class="col-lg-3">
            @Html.TextBox("fullname")
        </div>
    </div>
    <div class="row">
        <div class="col-lg-3">
            @Html.Label("Enter Email ID")
        </div>
        <div class="col-lg-3">
            @Html.TextBox("emailid")
        </div>
    </div>
    <div class="row">
        <div class="col-lg-3">
            @Html.Label("Enter Password")
        </div>
        <div class="col-lg-3">
            @Html.TextBox("password")
        </div>
    </div>
    
    <div class="row">
        <div class="col-lg-3">
        </div>
        <div class="col-lg-3">
            <input type="submit" value="Submit" class="btn btn-success" />
        </div>
    </div>
    @{Html.EndForm();}
</div>

