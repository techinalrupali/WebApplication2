@{
}
<h3>SignIn Page</h3>
<div class="container">
    @{ Html.BeginForm();}

    <div class="row">
        <div class="col-lg-3">
            @Html.Label("Enter Email ID")
        </div>
        <div class="col-lg-3">
            @Html.TextBox("emailid")
        </div>
    </div>
    <div class="row">
        <div class="col-lg-3">
            @Html.Label("Enter Password")
        </div>
        <div class="col-lg-3">
            @Html.TextBox("password")
        </div>
    </div>

    <div class="row">
        <input type="submit" value="Sign In" class="btn btn-success" />
    </div>
    <div>
        @if(ViewBag.Message!=null)
            {
                @ViewBag.Message;
            }
    </div>
    <div class="row">
        <p>Don't Have An Account?</p>@Html.ActionLink("Click Here","SignUp")
    </div>
    @{Html.EndForm();}
</div>