@{
}
<h3>Add New Product</h3>
<div class="container">
    @{ Html.BeginForm();}
    <div class="row">
        <div class="col-lg-3">
            @Html.Label("Enter Product Name")
        </div>
        <div class="col-lg-3">
            @Html.TextBox("name")
        </div>
    </div>
    <div class="row">
        <div class="col-lg-3">
            @Html.Label("Enter Product Price")
        </div>
        <div class="col-lg-3">
            @Html.TextBox("price")
        </div>
    </div>
    <div class="row">
        <div class="col-lg-3">
            @Html.Label("Enter Product Company")
        </div>
        <div class="col-lg-3">
            @Html.TextBox("company")
        </div>
    </div>
    <div class="row">
        <div class="col-lg-3">
            @Html.Label("Enter Product Description")
        </div>
        <div class="col-lg-3">
            @Html.TextBox("description")
        </div>
    </div>
    <div class="row">
        <div class="col-lg-3">
        </div>
        <div class="col-lg-3">
            <input type="submit" value="Save" class="btn btn-success" />
        </div>
    </div>
    @{Html.EndForm();}
</div>

