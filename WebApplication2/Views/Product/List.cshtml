@{
}
<p>
    @Html.ActionLink("Add New", "Create", "Product")
</p>
<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Price</th>
        <th>Comapny</th>
        <th>Description</th>
        <th>Action</th>
    </tr>
    @foreach (WebApplication2.Models.Product prod in ViewBag.ProductList)
    {
        <tr>
            <td>@prod.Id</td>
            <td>@prod.Name</td>
            <td>@prod.Price</td>
            <td>@prod.Company</td>
            <td>@prod.Description</td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { @id = prod.Id }) |
                @Html.ActionLink("Delete", "Delete", new { @id = prod.Id })
            </td>
        </tr>
    }
</table>
